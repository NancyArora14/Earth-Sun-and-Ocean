<style>
  .two-images-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 60px 0;
    background-color: #f9f9f9;
  }

  .two-images-section__image {
    flex: 1;
    padding: 10px; /* Space around the images */
  }

  .two-images-section__image img {
    width: 100%;
    height: auto;
    border-radius: 8px; /* Optional: Add rounded corners */
  }
</style>

<div class="{{ section.settings.cst_class }} two-images-section section-{{ section.id }}">
  <div class="two-images-section__image">
    {% if section.settings.left_image %}
      <img src="{{ section.settings.left_image | img_url:"master" }}" alt="Left Image">
    {% endif %}
  </div>
  <div class="two-images-section__image">
    {% if section.settings.right_image %}
      <img src="{{ section.settings.right_image | img_url:"master" }}" alt="Right Image">
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Two Images Section",
  "settings": [
    {
      "type": "text",
      "id":"cst_class",
      "label":"Custom Class"
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Image"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Image"
    }
  ],
  "presets": [
    {
      "name": "Two Images",
      "category": "Custom"
    }
  ]
}
{% endschema %}
